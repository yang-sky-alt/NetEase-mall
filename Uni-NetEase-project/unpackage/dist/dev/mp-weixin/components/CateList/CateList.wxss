.catelist_page .banner {
  height: 360rpx;
}
.catelist_page .banner image {
  height: 360rpx;
  width: 100%;
}
.catelist_page .title {
  font-size: 40rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.catelist_page .desc {
  font-size: 30rpx;
  color: #666;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.catelist_page .goods_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.catelist_page .goods_list::after {
  content: '';
  width: 340rpx;
}
.catelist_page .goods_list .goods_item {
  width: 340rpx;
  margin-bottom: 10rpx;
}
.catelist_page .goods_list .goods_item image {
  width: 100%;
  height: 340rpx;
}
.catelist_page .goods_list .goods_item .goods_price {
  color: #bb2c08;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 4rpx;
}

