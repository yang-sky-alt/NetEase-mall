.Recommend_page {
  margin-top: 10rpx;
}
.Recommend_page .banner {
  height: 350rpx;
}
.Recommend_page .banner .swiper-item image {
  height: 350rpx;
  width: 100%;
}
.Recommend_page .policy_descList {
  display: flex;
  margin: 6rpx 0;
}
.Recommend_page .policy_descList .policy_item {
  flex: 1;
  text-align: center;
}
.Recommend_page .policy_descList .policy_item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 4rpx;
}
.Recommend_page .policy_descList .policy_item text {
  font-size: 26rpx;
}
.Recommend_page .nav {
  display: flex;
  flex-wrap: wrap;
}
.Recommend_page .nav .nav_item {
  width: 20%;
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}
.Recommend_page .nav .nav_item image {
  width: 100rpx;
  height: 100rpx;
}
.Recommend_page .nav .nav_item text {
  display: block;
}
.Recommend_page .category_list .category_item {
  margin: 16rpx 0;
}
.Recommend_page .category_list .category_img {
  height: 370rpx;
  width: 100%;
}
.Recommend_page .category_list .category_scroll {
  height: 300rpx;
  display: flex;
  flex-wrap: nowrap;
}
.Recommend_page .category_list .category_scroll .goods_item {
  margin-left: 10rpx;
}
.Recommend_page .category_list .category_scroll .goods_item .goods_img {
  background-color: #f5f5f5;
  width: 200rpx;
  height: 200rpx;
}
.Recommend_page .category_list .category_scroll .goods_item .goods_name {
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}

