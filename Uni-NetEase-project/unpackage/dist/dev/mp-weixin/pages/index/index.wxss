.home_page .header {
  display: flex;
  padding: 10rpx 5rpx;
}
.home_page .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx;
}
.home_page .header .search {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ccc;
}
.home_page .header .search text {
  position: absolute;
  left: 10rpx;
}
.home_page .header .search input {
  margin-left: 60rpx;
  height: 60rpx;
}
.home_page .header button {
  width: 144rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 4rpx;
}
.home_page .nav-scroll {
  display: flex;
  white-space: nowrap;
  flex-flow: nowrap;
  height: 65rpx;
}
.home_page .nav-scroll .nav-item {
  height: 40rpx;
  padding: 10rpx;
  font-size: 24rpx;
}
.home_page .nav-scroll .nav-item.active {
  border-bottom: 3rpx solid #f00;
  color: #f00;
}

