<view class="personal_page"><view class="header"><block wx:if="{{userinfo.nickName}}"><image class="user_img" src="{{userinfo.avatarUrl}}" mode></image><view class="userinfo">{{userinfo.nickName}}</view><button data-event-opts="{{[['tap',[['exit',['$event']]]]]}}" bindtap="__e">退出登录</button></block><block wx:else><image class="user_img" src="/static/images/personal/personal.png" mode></image><button data-event-opts="{{[['tap',[['toLogin',['$event']]]]]}}" bindtap="__e">去登录吧</button></block></view><view><button data-event-opts="{{[['tap',[['login',['$event']]]]]}}" bindtap="__e">微信登录流程</button></view></view>