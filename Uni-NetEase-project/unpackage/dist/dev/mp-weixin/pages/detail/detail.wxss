.detail .header {
  height: 90rpx;
  line-height: 90rpx;
  width: 570rpx;
  margin: 0 auto;
  text-align: center;
}
.detail .detaiScroll {
  height: calc(100vh - 190rpx);
}
.detail .detaiScroll image {
  width: 100%;
  height: 750rpx;
}
.detail .detaiScroll .tag {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #bb2c08;
  margin: 20rpx auto;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}
.detail .detaiScroll .price {
  font-size: 50rpx;
  color: #dd1a21;
  line-height: 70rpx;
  margin-left: 5%;
}
.detail .footer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.detail .footer .img {
  flex: 1;
  line-height: 100rpx;
}
.detail .footer .img image {
  display: block;
  margin: 20rpx auto;
  width: 60rpx;
  height: 60rpx;
}
.detail .footer .btn {
  flex: 2;
  border-left: 1px solid #eee;
  text-align: center;
}
.detail .footer .btn.cart {
  background-color: #dd1a21;
  color: #fff;
}

